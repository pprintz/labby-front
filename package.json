{
    "name": "labby-front",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@types/node": "12.12.3",
        "@types/react": "16.9.11",
        "@types/react-dom": "16.9.3",
        "@types/react-router": "^5.1.2",
        "@types/react-router-dom": "^5.1.1",
        "eslint-config-prettier": "^6.5.0",
        "eslint-plugin-prettier": "^3.1.1",
        "husky": "^3.0.9",
        "lint-staged": "^9.4.2",
        "prettier": "^1.18.2",
        "react": "^16.11.0",
        "react-dom": "^16.11.0",
        "react-router": "^5.1.2",
        "react-router-dom": "^5.1.2",
        "react-scripts": "3.2.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "eject": "react-scripts eject",
        "prettier": "prettier --list-different 'src/**/*.ts' || (echo '\nPlease fix code formatting by running:\nnpm run prettier:fix\n'; exit 1)",
        "prettier:fix": "prettier --write 'src/**/*.ts'",
        "lint": "tslint -p ./",
        "tsc": "tsc -p ./ --noEmit",
        "tsc:watch": "tsc -p ./ --noEmit -w",
        "test": "jest --config jest.config.json",
        "test:watch": "jest --config jest.config.json --watch",
        "test:update": "jest --config jest.config.json -u",
        "ci-check": "npm run prettier && npm run lint && npm run tsc && npm run test"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/jest": "^24.0.21",
        "@typescript-eslint/eslint-plugin": "^2.6.1",
        "@typescript-eslint/parser": "^2.6.1",
        "eslint": "^6.6.0",
        "jest": "^24.9.0",
        "react-redux-typescript-scripts": "^1.6.2",
        "ts-jest": "^24.1.0",
        "tslint": "^6.0.0-beta0",
        "tslint-react": "^4.1.0",
        "typescript": "^3.6.4",
        "typescript-tslint-plugin": "^0.5.4"
    }
}
